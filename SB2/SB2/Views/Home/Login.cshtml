@{
    ViewBag.Title = "Signup Page";

}

<div class="row">
    <div class="alert alert-info">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        Press enter key or click the Submit button
    </div>
    @using (Html.BeginForm("Autenticacion", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h1>Login</h1>
        <div class="form-group">
            <input class="form-control" type="text" name="nick" placeholder="UserName">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label>
                <input type="checkbox" name="remember_me">
                Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit"> INGRESAR </button>
    }


    @using (Html.BeginForm("Autenticacion", "Home", FormMethod.Post))  
    {
       <input type="text" name="nick" id="nick" />
        <input type="password" name="password" id="password" />
        <input type="submit" value="Login" />
    }

</div>



