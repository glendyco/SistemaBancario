@{
    ViewBag.Title = "Inicio de esion";
}

<h3>@ViewBag.Message</h3>


@{
 
    ViewBag.aviso = "Inicie sesión ingresando su nombre de usuario, número de Usuario y Contraseña\n";

    ViewBag.aviso2= "Presione Enter o haga click en el boton 'INICIAR SESION'";


}

<div class="row">

    <div class="alert alert-info">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
       

        @if (ViewData["MensajeError"] != null)
        {
            @ViewData["MensajeError"];
        }
        else
        {
            @ViewBag.aviso2
        }
    </div>

    @using (Html.BeginForm("Autenticacion", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h1>Iniciar Sesion</h1>
        <div class="form-group">
            <input class="form-control" type="number" name="code" placeholder="Codigo de Usuario">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="nick" placeholder="Username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Contraseña">
        </div>
        <div class="form-group">
            <label>
                <input type="checkbox" name="remember_me">
                Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit"> INICIAR SESION </button> <BR><BR><BR>
    }

    @using (Html.BeginForm("Registro", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <button class="btn btn-lg btn-primary" type="submit"> REGISTRARSE </button>
    }



</div>



